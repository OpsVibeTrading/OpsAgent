{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "style": {
        "useConst": "error"
      }
    }
  },
  "javascript": {
    "globals": ["process", "__dirname", "module", "require"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
